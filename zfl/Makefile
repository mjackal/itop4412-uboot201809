CC		= gcc
LIBCC	= ar
RM		= rm

#----------------------------------------------------------------------------------------------
CFLAGS		= -o

#---------------------------------------------------------------------------------------
SOURCES = $(OBJECTS:.o=.c)

all:
	$(CC) $(CFLAGS)	mkbl2 mkbl2.c 

#---------------------------------------------------------------------------------------
.c.o:
		$(CC) $(CFLAGS) -c $< -o $@

#---------------------------------------------------------------------------------------
clean:
	$(RM)		-rf mkbl2

